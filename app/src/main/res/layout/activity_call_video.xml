<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:padding="@dimen/_10sdp"
    tools:context="com.example.nguyenhuuquan.calltosantaclaus.CallVideoActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/userprofile"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp" />
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:text="@string/santa_claus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="@color/colorTextDefault"
            android:text="video calling from Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_120sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/icon_messenger_small"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp" />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/colorTextDefaultBlue"
                android:text="@string/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/icon_messenger_clock_small"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp" />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/colorTextDefaultBlue"
                android:text="@string/remind_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleDecline"
                android:src="@mipmap/msg_endcall"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp" />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="@string/decline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleAccept"
                android:src="@mipmap/msg_accept_video"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp" />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="@string/accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
